# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# UTF-8 with Unix-style newlines for all files
[*]
charset = utf-8
end_of_line = lf

# no trailing whitespace and a blank new line at the end of all files
[*]
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation for Python code
[*.py]
indent_style = space
indent_size = 4
